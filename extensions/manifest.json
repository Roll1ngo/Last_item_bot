{
    "manifest_version": 3,
    "name": "API Request Logger",
    "version": "1.1",
    "permissions": [
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess",
        "storage",
        "downloads",
        "scripting",
        "activeTab",
        "webRequest"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "*://*.g2g.com/*"
    ],
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset_1",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    }
}